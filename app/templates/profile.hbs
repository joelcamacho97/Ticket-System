 {{partial 'navbar'}}


<div class="container">



    <div class="row">
        <div class="col s12 m12 l12 ">
            <div class="card">
                <div class="card-image">
                    <img style="height: 150px;" src="../img/fundo_form.png">
                </div>
                <div class="card-content">
                    <img style="width: 70px; position: absolute; top: 110px; z-index: 1;" src={{session.currentUser.profileImageURL}} alt="" class="circle responsive-img activator card-profile-image">


                    <span class="card-title text-darken-4"><h3> Profile </h3></span>

                    <div class="row">
                        <div class="col s12 m8 l8">

                            <table>

                                <tbody>
                                    <tr>
                                        <td>ID:</td>
                                        <td>{{ session.uid }}</td>
                                    </tr>
                                    <tr>
                                        <td>Nome:</td>
                                        <td>{{model.Name}}</td>
                                    </tr>
                                    <tr>
                                        <td>Nivel:</td>
                                        <td>{{model.Level}}</td>
                                    </tr>
                                    <tr>
                                        <td>Email:</td>
                                        <td>{{session.currentUser.email}}</td>
                                    </tr>



                                </tbody>
                            </table>

                        </div>
                        
                        <div class="col s12 m4 l4 wrapper">
                            
                            <div class="row">
                                <a class="col s12 waves-effect waves-light btn"><i class="material-icons right">fingerprint</i>Ver abilitações</a>
                            </div>
                            <div class="row">
                                <a class="col s12 waves-effect waves-light btn"><i class="material-icons right">history</i>Historico de pedidios de assistencia</a>
                            </div>
                             <div class="row">
                                {{#link-to 'customers' class="col s12 waves-effect waves-light yellow darken-2 black-text btn" tagName="a"}}<i class="material-icons right">view_list</i> Listagem de todos os clientes{{/link-to}}
                            </div>

                            {{#if model.Supervisor}}
                            <div class="row">
                                {{#link-to 'users' class="col s12 waves-effect waves-light yellow darken-2 black-text btn" tagName="a"}}<i class="material-icons right">view_list</i> Ver todos os utilizadores{{/link-to}}
                            </div>
                            {{/if}}

                        </div>
                    </div>
                </div>
                
                <div class="card-action">

                    <div class="row">


                        {{#md-btn-dropdown text='Alterar' class='amber accent-4 right col s12 l2' }}

                        <li>{{#link-to 'detail-change' tagName="a"}}Detalhes de Perfil{{/link-to}}</li>
                        <li>{{#link-to 'email-change' tagName="a"}}Email{{/link-to}}</li>
                        <li>{{#link-to 'password-change' tagName="a"}}Password{{/link-to}}</li>
                        {{/md-btn-dropdown}}

                        <a class="waves-effect waves-light btn red col s12 l3" {{action "toggleModal"}}><i class="material-icons right">delete forever</i>Apagar a conta</a> {{#if isModalShown}} {{#md-modal close='toggleModal' class="test-modal"}} {{!--
                        The body of the modal --}}
                        <div class="modal-content">
                            <h4>Confirmação da eliminação da conta</h4>

                            <div class="row">
                                <div class="col s12">
                                    <div class="card-panel yellow">
                                        <center>
                                            <span class="black-text">Caso queira mesmo apagar insira a sua password em baixo !!!
          </span> </center>
                                    </div>
                                </div>
                            </div>
                            <div class="input-field col s12">
                                {{input type="password" value=password class="validate"}}
                                <label for="password">Password</label>
                            </div>

                        </div>

                        {{!-- The actions at the bottom of the modal --}}
                        <div class="modal-footer">

                            {{!-- Modal's Agree Button --}}
                            <a class="modal-action
                modal-close
                waves-effect
                waves-green
                btn-flat
                agree-button" {{action "apagar"}}>
        Apagar
      </a> {{!-- Modal's Cancel Button --}}
                            <a class="modal-action
                modal-close
                waves-effect
                waves-green
                btn-flat
                cancel-button" {{action 'toggleModal'}}>
        Cancel
      </a>

                        </div> {{/md-modal}} {{/if}}

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>