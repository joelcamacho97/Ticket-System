 {{partial 'navbar'}}

<div class="container">
    <div class="row">
        <div class="col s12 m12 l12 ">
            <div class="card">
                <div class="card-image">
                    <img style="height: 150px;" src="../img/fundo_form.png">
                </div>

                <div class="card-content">
                    <img style="width: 70px; position: absolute; top: 110px; z-index: 1;" src={{session.currentUser.profileImageURL}} alt="" class="circle responsive-img activator card-profile-image">

                    <span class="card-title text-darken-4"><h3> Alteração dos dados </h3></span>

                    <div class="row">
                        <div class="input-field col s12">
                            {{input id="nome" type="text" class="validate" value=name}}
                            <label for="nome">Nome</label>
                        </div>
                    </div>


                </div>

                <div class="card-action">

                    <div class="row">

                        {{#link-to 'profile' class="btn waves-effect waves-light cyan darken-4" tagName="button"}}Voltar{{/link-to}}

                        <a class="btn-floating btn-large waves-effect waves-light cyan darken-4 right" {{action "limpar"}}><i class="material-icons">clear_all</i></a>

                        <button class="btn waves-effect waves-light cyan darken-4" type="submit" {{action "editar"}}>Submit
                      <i class="material-icons right">send</i>
                       </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>