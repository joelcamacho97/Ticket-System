 {{partial 'navbar'}}

<div class="container">

    <div class="row">
        <div class="col s12 m12 l12 ">
            <br>
            <br>
            <div class="card z-depth-1">
                <div class="card-content ">
                    <span class="card-title "><h3> RIT nº{{model.id}} </h3>
                    </span>

                    <div class="row">
                        <div class="col s12 m12">
                            <div class="col s12 m6">
                                <h5>Dados :</h5> {{#if editar}}

                                <div class="col s6">
                                    NIF: {{md-input value=model.NIF}} Solicitante: {{md-input value=model.Solicitante}}

                                </div>
                                <div class="col s6">
                                    Cliente: {{md-input value=model.Cliente}} Telemovel: {{md-input value=model.Telemovel}}
                                </div>
                                <div class="col s12">
                                    Morada: {{md-input value=model.Morada}}
                                </div>
                                <div class="col s12">
                                    Localidade: {{md-input value=model.Localidade}}
                                </div>
                                {{else}}
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>NIF:</td>
                                            <td>{{model.NIF}} </td>
                                            <td>Solicitante:</td>
                                            <td>{{model.Solicitante}}</td>
                                        </tr>
                                        <tr>
                                            <td>Cliente:</td>
                                            <td>{{model.Cliente}}</td>
                                            <td>Telemovel:</td>
                                            <td>{{model.Telemovel}}</td>
                                        </tr>
                                        <tr>
                                            <td>Morada:</td>
                                            <td>{{model.Morada}}</td>
                                        </tr>
                                        <tr>
                                            <td>Localidade:</td>
                                            <td>{{model.Localidade}}</td>
                                        </tr>
                                    </tbody>
                                </table> {{/if}}
                            </div>



                            <div class="col s12 m6">
                                <h5>Descrição :</h5> {{#if editar}}

                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Análise onLabel="Sim" offLabel="Não" name="Análise:"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Manutenção onLabel="Sim" offLabel="Não" name="Manutenção"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Orçamento onLabel="Sim" offLabel="Não" name="Orçamento"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Software onLabel="Sim" offLabel="Não" name=" Anomalia Software:"}}
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Instalação onLabel="Sim" offLabel="Não" name="Instalação:"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Hardware onLabel="Sim" offLabel="Não" name="Anomalia Hardware:"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        {{md-switch checked=model.Formação onLabel="Sim" offLabel="Não" name="Formação"}}
                                    </div>
                                </div>
                                {{else}}
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>Análise:</td>
                                            <td>{{model.Análise}}</td>
                                            <td>Manutenção:</td>
                                            <td>{{model.Manutenção}}</td>

                                        </tr>
                                        <tr>
                                            <td>Orçamento:</td>
                                            <td>{{model.Orçamento}}</td>
                                            <td>Anomalia Software:</td>
                                            <td>{{model.Software}}</td>
                                        </tr>
                                        <tr>
                                            <td>Instalação:</td>
                                            <td>{{model.Instalação}}</td>
                                            <td>Anomalia Hardware:</td>
                                            <td>{{model.Hardware}}</td>
                                        </tr>
                                        <tr class="center">
                                            <td>Formação:</td>
                                            <td>{{model.Formação}}</td>
                                        </tr>
                                    </tbody>

                                </table>
                                {{/if}}
                            </div>
                        </div>
                    </div>

{{#if editar}}

                    <div class="col s12">
                        <h5>Detalhes do RIT Nº {{model.id}} :</h5> {{#if editar}} g {{else}} fdsgfds {{/if}}
                    </div>
{{else}}

 <div class="col s6">
                        <h5>Descrição de incidência :</h5> {{#if editar}} g {{else}} fdsgfds {{/if}}
                    </div>
                    <div class="col s6">

                        <h5>Historico de atualizações :</h5>
                        
                    </div>

{{/if}}

                   {{#if editar}}

                    <div class="row">
                        <a class="btn waves-effect waves-light green right-align right" {{action 'salvar'}}><i class="material-icons right">save</i>Guardar</a>
                    </div>
                    <div class="row">
                        <a class="btn waves-effect waves-light red right-align right" {{action 'cancelar'}}><i class="material-icons right">cancel</i>Cancelar</a>
                    </div>

                    {{else}}

                    <div class="row">
                        <a class="btn waves-effect waves-light yellow accent-4 black-text right-align right" {{action 'editar'}}><i class="material-icons right">edit</i>Editar</a>
                    </div>

                    {{/if}}

                </div>


                <div class="card-action">

                    {{#link-to 'tikets' class="btn waves-effect waves-light light-blue darken-4"}}<i class="material-icons left">arrow_back</i>Voltar atras{{/link-to}}

                    <div class="chip right">
                        Nivel: {{model.id}} | Data: {{model.dateValue}} | Hora: {{model.hora}}
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>