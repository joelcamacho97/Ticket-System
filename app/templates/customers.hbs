 {{partial 'navbar'}}



 <div class="container">

    <div class="row">
        <div class="col s12 m12 l12 ">
            <div class="card">
                <div class="card-image">
                    <img style="height: 150px;" src="../img/fundo_form.png">
                </div>
                <div class="card-content">
                    <img style="width: 70px; position: absolute; top: 110px; z-index: 1;" src=../img/another-users.png alt="" class="circle responsive-img activator card-profile-image">



                    <span class="card-title text-darken-4"><h3>Lista de todos os clientes</h3>    </span> 
 <div class="row">
                    <a class="waves-effect waves-teal btn-flat right" {{action "pesquisar" }}><i class="material-icons">search</i></a>


                    
 </div>
    <div class="row">
                        <div style="overflow-x:auto;" >

                            <table class="bordered highlight">
        <thead>
            <tr>
                <th>NIF:</th>
                <th>Address:</th>
                <th>City:</th>
                <th>Common_Name:</th>
                <th>Company_Name:</th>
                <th>Country:</th>
                <th>Mobile:</th>
                <th>Email:</th>
                <th>Phone:</th>
                <th>Zip:</th>
                <th>Alterações:</th>
            </tr>
        </thead>
        <tbody>

            {{#each model as |customers|}}

            <tr>
                <th>{{customers.id}}</th>
                <td>{{customers.Address}}</td>
                <td>{{customers.City}}</td>
                <td>{{customers.Common_Name}}</td>
                <td>{{customers.Company_Name}}</td>
                <td>{{customers.Country}}</td>
                <td>{{customers.Mobile}}</td>
                <td>{{customers.Work_Email}}</td>
                <td>{{customers.Work_Phone}}</td>
                <td>{{customers.Zip}}</td>
                <td align="center"> {{#link-to 'profile-customers' customers.id class="btn-floating btn-large waves-effect waves-light right"}}<i class="material-icons">assignment_ind</i>{{/link-to}} </td>
            </tr>

            {{/each}}
        </tbody>

    </table>

                        </div>

                    </div> 

 <ul class="pagination">
    <li class="waves-effect" {{action "menos" }}><a href=""><i class="material-icons">chevron_left</i></a></li>
    <li class="waves-effect" {{action "mais" }}><a href=""><i class="material-icons">chevron_right</i></a></li>
  </ul>
                </div>

            </div>
        </div>
    </div>
</div>