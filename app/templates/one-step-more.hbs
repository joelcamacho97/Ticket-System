<div class="container">

    <div class="row">
        <div class="col s12 m12 l12 ">
            <div class="card">
                <div class="card-image">
                    <img style="height: 150px;" src="../img/fundo_form.png">
                </div>
                <div class="card-content">
                    <img style="width: 70px; position: absolute; top: 110px; z-index: 1;" src={{session.currentUser.profileImageURL}} alt="" class="circle responsive-img activator card-profile-image">


                    <span class="card-title text-darken-4"><h3> So mais uma coisa ... </h3></span>

                    <div class="row">
                        <div class="col s6">
                            <h5 class="center"> Nome: </h5>

                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i> {{input type="text" value=userName}}
                                <label class="active">Nome</label>
                            </div>
                        </div>

                        <div class="col s6">
                            <h5 class="center"> Abilidades: </h5>
                            <div class="col s6">
                                {{md-check name="Analise" checked=analise}} {{md-check name="Orçamento" checked=orcamento}} {{md-check name="Instalação" checked=instalacao}} {{md-check name="Manutenção" checked=manutencao}} {{md-check name="Software" checked=Software}} {{md-check name="Hardware"
                                checked=hardware}} {{md-check name="Formação" checked=formação}}
                            </div>


                            {{#if Software}}

                            <label class="control-label">Que tipo de software ?</label> <br> {{md-check name="icg" checked=icg}} {{md-check name="primavera" checked=primavera}} {{md-check name="sage" checked=sage}} {{md-check name="Outro" checked=Outro}}
                            {{/if}} {{#if Outro}} {{input type="text" class="form-control" value=outro placeholder="Insira aqui o outro tipo de software"}} {{/if}}


                        </div>
                    </div>

                    
                </div>

                <div class="card-action">

                    <button type="submit" class="btn btn-lg btn-primary btn-block" {{action "salvar"}}> Salvar </button>

                </div>
            </div>
        </div>
    </div>
</div>